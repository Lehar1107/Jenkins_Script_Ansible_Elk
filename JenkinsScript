pipeline {
    agent any
    parameters {
        choice(name: 'shellscript', choices: ['elasticsearch', 'kibana', filebeat, logstash], description: 'Select the component for the script')
    }
    stages {
        stage('Clone Git Repository') {
            steps {
                // Clone the Git repository
                git(
                    url: "https://github.com/Lehar1107/Jenkins_Script_Ansible_Elk.git",
                    branch: "main",
                    changelog: true,
                    poll: true
                )
            }
        }
        
        stage('Run script') {
            steps {
                // Ensure proper permissions
                script {
                    // Change directory to the repository
                    def repoDir = "/home/lehar/ansjenshell"
                    //sh "chmod -R 777 ${repoDir}"
                    
                    // Execute your script with the selected component parameter
                    echo "Selected component: ${params.shellscript}"
                    sh "${repoDir}/file.sh ${params.shellscript}"
                }
            }
        }
    }
}


